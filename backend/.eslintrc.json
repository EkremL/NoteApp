{
  "root": true,
  "env": {
    "browser": false,
    "node": true,
    "es6": true
  },
  "parser": "@typescript-eslint/parser",
  "plugins": ["@typescript-eslint"],
  "extends": ["eslint:recommended", "plugin:@typescript-eslint/recommended"],
  "parserOptions": {
    "files": ["*.ts"],
    "ecmaVersion": 2021,
    "sourceType": "module",
    "project": ["**/tsconfig.json"]
  },
  "rules": {
    "@typescript-eslint/no-non-null-assertion": "warn"
  }
}
